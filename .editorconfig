root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{json,sh}]
trim_trailing_whitespace = false
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_size = 4

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[*.config]
indent_style = space
indent_size = 2

[*.conf]
indent_style = space
indent_size = 4

[Jenkinsfile]
indent_style = space
indent_size = 2

[composer.json]
indent_style = space
indent_size = 4
